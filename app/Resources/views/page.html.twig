{% extends 'base.html.twig' %}

{% block title %}Survey Market{% endblock %}

{% block body %}
    <div class="container">
        {#<div class="row">#}
            {#<div class="col-md-12">tu bedzie naglowek</div>#}
        {#</div>#}
        <div class="row">
            <div class="col-md-12">
                <nav class="navbar navbar-default">
                    <div class="container-fluid">
                        <!-- Brand and toggle get grouped for better mobile display -->
                        <div class="navbar-header">
                            <a class="navbar-brand" href="{{ path('surveyMarket') }}">Strona główna</a>
                            {% if is_granted('ROLE_EMPLOYER')%}
                                <a class="navbar-brand" href="{{ path('pollDefinition') }}">Definicje Ankiet</a>
                            {% endif %}
                            {% if is_granted('ROLE_POLLSTER') or is_granted('ROLE_EMPLOYER') %}
                                <a class="navbar-brand" href="{{ path('offer') }}">Oferty</a>
                            {% endif %}
                        </div>

                        <!-- Collect the nav links, forms, and other content for toggling -->
                        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                            <ul class="nav navbar-nav">
                                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                    <li><a href="{{ path('fos_user_security_logout') }}">Wyloguj</a></li>
                                {% else %}
                                    <li><a href="{{ path('fos_user_registration_register') }}">Rejestracja</a></li>
                                    <li><a href="{{ path('fos_user_security_login') }}">Logowanie</a></li>
                                {% endif %}
                            </ul>
                        </div><!-- /.navbar-collapse -->
                    </div><!-- /.container-fluid -->
                </nav>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">{% block contents %}{% endblock %}</div>
        </div>
        {#<div class="row">#}
            {#<div class="col-md-12">tu bedzie stopka</div>#}
        {#</div>#}
    </div>
{% endblock %}