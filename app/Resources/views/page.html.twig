{% extends 'base.html.twig' %}

{% block title %}Survey Market{% endblock %}

{% block body %}
    <div class="container">
        {#<div class="row">#}
            {#<div class="col-md-12">tu bedzie naglowek</div>#}
        {#</div>#}
        <div class="row">
            <div class="col-md-12">
                <nav class="navbar navbar-default">
                    <div class="container-fluid">
                        <!-- Brand and toggle get grouped for better mobile display -->
                        <div class="navbar-header">
                            <button class="navbar-toggle" type="button"  data-toggle="collapse" data-target="#bs-navbar" aria-controls="bs-navbar" aria-expanded="true">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            <a class = navbar-brand href="{{ path('surveyMarket') }}">Strona główna</a>
                        </div>

                        <!-- Collect the nav links, forms, and other content for toggling -->
                        <nav id="bs-navbar" class="navbar-collapse collapse in" aria-expanded="true" >
                        {#<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1" >#}
                            <ul class="nav navbar-nav">
                                {% if is_granted('ROLE_EMPLOYER')%}
                                    <li><a href="{{ path('pollDefinition') }}">Definicje Ankiet</a></li>
                                {% endif %}
                                {% if is_granted('ROLE_POLLSTER') or is_granted('ROLE_EMPLOYER') %}
                                    <li><a href="{{ path('offer') }}">Oferty</a></li>
                                {% endif %}
                                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                    <li><a href="{{ path('fos_user_security_logout') }}">Wyloguj</a></li>
                                {% else %}
                                    <li><a href="{{ path('fos_user_registration_register') }}">Rejestracja</a></li>
                                    <li><a href="{{ path('fos_user_security_login') }}">Logowanie</a></li>
                                {% endif %}
                            </ul>
                        </nav>
                        {#</div><!-- /.navbar-collapse -->#}
                    </div><!-- /.container-fluid -->
                </nav>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">{% block contents %}{% endblock %}</div>
        </div>
        {#<div class="row">#}
            {#<div class="col-md-12">tu bedzie stopka</div>#}
        {#</div>#}
    </div>
{% endblock %}